{
  "name": "product",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "product/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/product/browser",
        "index": "product/src/index.html",
        "baseHref": "/",
        "main": "product/src/main.ts",
        "tsConfig": "product/tsconfig.app.json",
        "assets": ["product/src/favicon.ico", "product/src/assets"],
        "styles": ["product/src/styles.css"],
        "scripts": [],
        "isolatedConfig": true,
        "webpackConfig": "product/webpack.config.ts"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "product/src/environments/environment.ts",
              "with": "product/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "webpackConfig": "product/webpack.config.prod.ts"
        }
      }
    },
    "serve": {
      "executor": "@nx/webpack:ssr-dev-server",
      "defaultConfiguration": "development",
      "options": {
        "browserTarget": "product:build:development",
        "serverTarget": "product:serve-server:development",
        "port": 4201,
        "browserTargetOptions": {
          "watch": true
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "browserTarget": "product:build:production",
          "serverTarget": "product:serve-server:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["product/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "serve-static": {
      "dependsOn": ["build", "server"],
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "PORT=4201 node dist/product/browser/server/main.js"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "product/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "server": {
      "dependsOn": ["build"],
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "main": "product/server.ts",
        "outputPath": "dist/product/server",
        "outputFileName": "server.js",
        "tsConfig": "product/tsconfig.server.json",
        "compiler": "babel",
        "externalDependencies": "all",
        "outputHashing": "none",
        "isolatedConfig": true,
        "webpackConfig": "product/webpack.server.config.ts"
      },
      "configurations": {
        "development": {
          "optimization": false,
          "sourceMap": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "product/src/environments/environment.ts",
              "with": "product/src/environments/environment.prod.ts"
            }
          ],
          "sourceMap": false
        }
      }
    },
    "serve-browser": {
      "executor": "@nx/react:module-federation-dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "product:build",
        "hmr": true,
        "port": 4201
      },
      "configurations": {
        "development": {
          "buildTarget": "product:build:development"
        },
        "production": {
          "buildTarget": "product:build:production",
          "hmr": false
        }
      }
    },
    "serve-server": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "product:server:development",
        "buildTargetOptions": {
          "watch": true
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "buildTarget": "product:server:production"
        }
      }
    }
  },
  "tags": []
}
